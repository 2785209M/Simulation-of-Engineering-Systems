{
  "workbench.colorTheme": "Gruvbox Dark (Hard)",
  "[python]": {
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.defaultColorDecorators": "never"
  },

  // ===== LaTeX Workshop Core Settings =====
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-interaction=nonstopmode",
        "-synctex=1",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    }
  ],

  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex → view PDF",
      "tools": ["pdflatex"]
    },
    {
      "name": "xelatex → view PDF",
      "tools": ["xelatex"]
    }
  ],

  // ===== PDF Viewer & Build Behavior =====
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.ref.viewer": "tab",
  "latex-workshop.view.pdf.ref.enabled": true,
  "latex-workshop.view.pdf.invert": 0,
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",
  "latex-workshop.view.pdf.tab.openAfterBuild.enabled": true,
  "latex-workshop.view.pdf.tab.editorGroup": "current",
  "latex-workshop.intellisense.package.enabled": true,
  "latex-workshop.message.error.show": false,
  "latex-workshop.message.warning.show": false,

  // ===== Spell Checking & Grammar =====
  "ltex.language": "en-GB",
  "ltex.enabled": true,
  "ltex.diagnoselanguage": "en",
  "ltex.additionalRules.motherTongue": "en",
  "ltex.latex.commands": {
    "cite": "ignore",
    "ref": "ignore"
  },

  // ===== Editor Behaviour =====
  "editor.wordWrap": "on",

  // ===== LaTeX Utilities =====
  "latex-utilities.countWord.path": "texcount",
  "latex-utilities.countWord.args": [],
  "latex-utilities.formattedPaste.pasteTable.enabled": true,
  "latex-utilities.formattedPaste.pasteTable.booktabs": true,
  "latex-utilities.formattedPaste.pasteTable.align": "center",
  "latex-utilities.wordcount.enableOnSave": true,

  // ===== Git Integration =====
  "git.enableSmartCommit": true,
  "git.confirmSync": false
}
